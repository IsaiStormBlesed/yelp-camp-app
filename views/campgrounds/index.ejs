<% layout('layouts/boilerplate') %> 

<div id="map" style="width: 100%; height: 500px"></div>

<h1 class="mb-5">Campgrounds</h1>
<% for(let camp of camps) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img src="<%= camp.images[0].url %>" alt="#" class="img-fluid">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= camp.title %></h5>
                    <p class="card-text"><%= camp.description %></p>
                    <p class="card-text">
                        <small class="text-mute"><%= camp.location %></small>
                    </p>
                </div>
                <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">
                    View Campground
                </a>
            </div>
        </div>
    </div>
<% } %> 

<script>
    const mbxTokken = '<%- process.env.MAPBOX_TOKEN%>'
    const campgrounds = {features: <%- JSON.stringify(camps) %>}
</script>

<script src="/scripts/clusterMap.js"></script>